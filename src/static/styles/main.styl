html,head,body
  padding:0
  margin:0
  height: 100vh
  background: #34495E
  color: #e9e9e9

body
  font-family: Futura, helvetica, arial, sans-serif
  overflow: hidden

#main
  padding:0
  margin:0
  height: 100vh

#code
  position: absolute
  height: 90vh
  width: 90vw    
  margin: 5vh 5vw
  background: transparentify(#34495E, 0.7)
  color: white
  overflow: auto
  pre
    padding: 20px
    font-size: 2em
    

h1
  color: #60B5CC
  font-size: 3em
  
h2
  color: white

a
  color white
  &:active, &:hover, &:visited
    color white

h1, h2, h3, h4, h5, h6
  margin: 10px

.slide
  display: flex
  flex-direction: column
  height: 100vh
  width: 100vw
  align-items: center
  text-align: center
  justify-content: center
  position: absolute
  transform-origin: center
  font-size: 1.8em

  ul,ol
    text-align: left

.progress-bar
  position: fixed
  height: 10px
  top: 0
  left: 0
  background-color: #60B5CC


#prev 
  position: fixed
  width: 33vw
  left: 0
  top: 0
  bottom: 0

#next 
  position: fixed
  width: 33vw
  right: 0
  top: 0
  bottom: 0

#codeControl
  position: fixed
  width: 33vw
  right: 33vw
  height: 33vh
  bottom: 0

.example
  height: 50vw
  width: 50vw    
  padding: 10px
  background: transparentify(#34495E, 0.1)

