html,head,body
  padding:0
  margin:0
  height: 100vh
  background: #34495E
  color: #e9e9e9

body
  font-family: Futura, helvetica, arial, sans-serif
  overflow: hidden

#main
  padding:0
  margin:0
  height: 100vh

#code
  position: fixed
  height: 90vh
  width: 90vw    
  margin: 5vh 5vw
  background: transparentify(#34495E, 0.7)
  color: white
  overflow: auto
  opacity: 0
  transition: all 0.3s ease-in-out
  pre
    padding: 20px
    font-size: 2em
    
  &.show
    opacity: 1

h1
  color: #60B5CC
  font-size: 6em
  
h2
  color: white

.slide
  display: flex
  flex-direction: column
  height: 100vh
  width: 100vw
  align-items: center
  justify-content: center
  position: absolute
  transform-origin: center

.progress-bar
  position: fixed
  height: 10px
  top: 0
  left: 0
  background-color: #60B5CC


#prev 
  position: fixed
  width: 33vw
  left: 0
  top: 0
  bottom: 0

#next 
  position: fixed
  width: 33vw
  right: 0
  top: 0
  bottom: 0

#codeControl
  position: fixed
  width: 33vw
  right: 33vw
  height: 33vh
  bottom: 0


